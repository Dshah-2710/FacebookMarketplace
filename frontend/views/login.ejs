<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
</head>
<body>
  <div class="container mt-5">
    <h2 class="text-center">Login</h2>
    
    <!-- ✅ Show Bootstrap Alert for Error Messages -->
    <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= errorMessage %>   Please enter valid credentials!
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>

    <!-- ✅ Login Form -->
    <form action="/login" method="POST" class="col-md-6 offset-md-3" id="loginForm">
      <div class="mb-3">
        <label for="email" class="form-label">Email address</label>
        <input type="email" class="form-control" id="email" name="email" required>
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" id="password" name="password" required>
      </div>
      <div class="row">
        <!-- Left: Login Button -->
        <div class="col-6">
          <button type="submit" class="btn btn-primary w-100">Login</button>
        </div>
        
        <!-- Right: Reset Button -->
        <div class="col-6">
          <button type="reset" class="btn btn-dark w-100">Reset</button>
        </div>
      </div>
    </form>

    <p class="text-center mt-3">
      Don't have an account? <a href="/register">Register here</a>
    </p>
  </div>

  <!-- ✅ Include Bootstrap JS for alert close button -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

  
</body>
</html>
