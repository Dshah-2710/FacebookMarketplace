<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Product Listings</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
  <style>
    body {
      background-color: #f5f5f5;
    }
    .product-card {
      background: white;
      border-radius: 10px;
      padding: 15px;
      transition: transform 0.2s, box-shadow 0.2s;
    }
    .product-card:hover {
      transform: scale(1.03);
      box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.15);
    }
    .product-img {
      width: 100%;
      height: 200px;
      object-fit: contain;
      border-bottom: 1px solid #ddd;
      padding-bottom: 10px;
    }
    .price {
      font-size: 1.3rem;
      font-weight: bold;
      color: #B12704;
    }
    .rating {
      color: #FFA41C;
    }
    .btn-add-cart {
      background: #FFD814;
      color: black;
      font-weight: bold;
    }
    .btn-add-cart:hover {
      background: #F7CA00;
    }
  </style>
</head>
<body>
  <div class="container mt-5"><!-- Floating Button -->
<!-- Floating Add Button -->
<a href="/add-products" class="btn btn-primary btn-lg position-fixed bottom-3 end-3 shadow" style="border-radius: 10px; padding: 10px 20px;">
  Add Product
</a>

    <h1 class="text-center mb-4">Shop the Best Deals</h1>

    <div class="row">
      <% products.forEach(product => { %>
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
          <div class="card product-card">
            <img src="/images/<%= product.image.split('/').pop() %>" alt="<%= product.name %>" />
            <div class="card-body">
              <h5 class="card-title"><%= product.name %></h5>
              <p class="price">$<%= product.price.toFixed(2) %></p>
              <p class="rating">⭐ <%= product.rating %> / 5</p>
              <p class="small text-muted"><%= product.description %></p>
              <a href="/cart/add/<%= product.id %>" class="btn btn-add-cart w-100">Add to Cart</a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
